<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.mixitconf.MainActivity">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp"
            android:text="@string/welcome"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/dates"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="10dp"
            android:text="@string/dates"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
            android:textColor="@color/colorSecondary" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/item_image_padding"
            android:src="@drawable/mxt_heart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/twitterLink"
                android:layout_width="@dimen/item_image_menu_size"
                android:layout_height="@dimen/item_image_menu_size"
                android:layout_margin="@dimen/item_image_padding"
                android:contentDescription="@string/twitter_description"
                android:src="@drawable/mxt_icon_twitter" />

            <ImageView
                android:id="@+id/emailLink"
                android:layout_width="@dimen/item_image_menu_size"
                android:layout_height="@dimen/item_image_menu_size"
                android:layout_margin="@dimen/item_image_padding"
                android:contentDescription="@string/email_description"
                android:src="@drawable/mxt_icon_mail" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/comeToMiXiTButton"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/item_image_padding"
                    android:drawableTop="@drawable/mxt_button_map_cpe"
                    android:text="Come to MiXiT" />

                <Button
                    android:id="@+id/comeToPartyButton"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/item_image_padding"
                    android:drawableTop="@drawable/mxt_button_map_hdv"
                    android:text="Come to Party" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mapCpeSubFloorButton"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/item_image_padding"
                    android:drawableTop="@drawable/mxt_button_map_cpe"
                    android:text="Map floor 0" />

                <Button
                    android:id="@+id/mapCpeFloor0Button"
                    android:layout_width="@dimen/logo_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/item_image_padding"
                    android:drawableTop="@drawable/mxt_button_map_hdv"
                    android:text="Map floor 1" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>