<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="60dp"
                android:height="12dp" />
        </shape>
    </item>
    <item
        android:width="32dp"
        android:height="32dp"
        android:drawable="@drawable/mxt_icon_speaker_body"
        android:gravity="center" />
    <item android:left="5dp" android:top="5dp" android:bottom="10dp" android:right="13dp" android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary"/>
            <size
                android:width="10dp"
                android:height="10dp"
                />
        </shape>
    </item>

</layer-list>