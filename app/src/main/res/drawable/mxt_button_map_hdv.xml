<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="38dp"
    android:height="24dp">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="60dp"
                android:height="12dp" />
        </shape>
    </item>
    <item
        android:width="32dp"
        android:height="32dp"
        android:drawable="@drawable/mxt_icon_walk"
        android:gravity="left" />
    <item
        android:width="32dp"
        android:height="32dp"
        android:drawable="@drawable/mxt_icon_party"
        android:gravity="right"></item>
</layer-list>